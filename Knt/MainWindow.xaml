<Window x:Class="Knt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Knt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="serv" Content="Создать сервер" Grid.Column="1" Grid.Row="2" Click="serv_Click" Background="#FF9FABFF"/>
        <Button x:Name="client" Content="Присоединиться" Grid.Column="1" Grid.Row="4" Click="client_Click" Background="#FFA3EDA2"/>
        <TextBox x:Name="name" Grid.Row="1" Grid.Column="1"/>
        <TextBox x:Name="ipp" Grid.Row="3" Grid.Column="1"/>
        <TextBlock Text="Ну типо мессенджер" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
